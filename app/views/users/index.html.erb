
<h1 id="user_index_h1">Users</h1>

<div>
    <% if current_user %>
        <%= current_user.email %>
        <%= link_to "Sign Out", destroy_user_session_path, data: { turbo_method: :delete } %> 

    <% else %>
        <%= button_to "Login with FaceBook","/auth/facebook",method: :POST ,data: {turbo: false} %> 
        <%= link_to "Sign In", new_user_session_path %> | 
    <% end %>
</div>  
    <br><br>
<div>

    <% @users.each do |user| %>
    <%= render user%><br>
    <%= link_to 'show user',user %> | Total Accounts : <%= user.acc.size%> | <%= link_to 'show account', user_accounts_path(user) %>
    </br></br>
    <%end%>
</div>

