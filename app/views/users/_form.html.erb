
<%= form_with(model: user) do |form| %>

<%if user.errors.any?%>
    <div style="color: red">
        <%user.errors.each do |error|%>
        <p><%=error.full_message%><p>
        <%end%>
    </div>
<%end%>

    <%= yield form %>

<div>
    <%=form.label :name %><br>
    <%=form.text_field :name %>
</div>

<div>
    <%=form.label :email %><br>
    <%=form.text_field :email %>
</div>

<div>
    <%=form.label :age %><br>
    <%=form.text_field :age %>
</div>

<div>
    <%= form.radio_button :gender ,"male"%>
    <%= form.label :gender_male, "male"%>
    <%=form.radio_button :gender,"female"%>
    <%=form.label :gender_female, "female"%>
  </div>

<div>
    <%=form.label :role %>
    <%=form.collection_check_boxes :role_ids,Role.all,:id,:name %>
</div>

<div>
    <br><%= form.submit%>
</div>

<%end%>
